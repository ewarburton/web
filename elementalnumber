    <style type="text/css">
        div.ele { 
            vertical-align: top;
            border-radius: 10pt;
            text-align: center;
            width: 50pt;
            min-height: 50pt;
            margin: 0;
            display: inline-block;
            margin-right: 1em;
            margin-bottom: 1em;
            
        }
        div.ele > div.title {
            padding-top: 12pt;
            font-size: 12pt;
        }
        p.anc span {
            padding: 4pt;
            display: inline-block;
            margin-right: 4pt;
            border-radius: 4pt;
        }
        div.ele div.anc {
            text-align: center;
            display: inline-block;
        }

        div.ele small {
            padding: 2pt;
            display:table-cell;
            border-radius: 2pt;
            font-size: 5pt;
